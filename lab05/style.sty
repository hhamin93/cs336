border = 1px solid black 
padding = 15px 20px

body 
    font: 24px Helvetica 
    background: #999999 

#main 
    min-height: 500px 

    margin: 0px 
    padding: 0px 
    display: flex 
    flex-flow: row 

    article 
        padding: padding 
        border: border 
        background: #dddd88 
        flex: 3 1 60% 
        order: 2 


    nav 
        flex-direction: column 
        padding: padding 
        border: border 
        background: #ccccff 
        flex: 1 6 20% 
        order: 1 
        text-align: right 
        flex-direction: column 
     
     aside 
        font-style: italic 
        padding: padding  
        border: border 
        background: #ccccff 
        flex: 1 6 20% 
        order: 3 

header, footer 
    display: block 
    padding: padding 
    min-height: 50px 
    border: border 
    background: #ffeebb 

header 
    font-size: 100% 
    font-weight: bolder 

footer 
    font-size: 50% 
    flex-direction: column 

/* Too narrow to support three columns */
@media all and (max-width: 640px) 
    #main, #page 
        flex-direction: column 
    
    
    #main > nav 
        text-align: left 

    
    #main > nav, #main > aside, header, footer 
        min-height: 50px 
        max-height: auto 